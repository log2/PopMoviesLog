<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="com.example.log2.popmovies.model.Movie" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/icons"
        tools:context=".detail.ActivityDetail">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"

            >

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">


                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/horizontal_margin"
                    android:layout_marginStart="@dimen/horizontal_margin"
                    android:layout_marginTop="@dimen/vertical_margin"
                    android:numStars="5"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    android:rating="@{movie.ratingAcross(5)}"
                    android:stepSize="0.5"
                    app:layout_constraintTop_toBottomOf="@+id/tv_releasedate" />


                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:id="@+id/tv_synopsis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/horizontal_margin"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="@dimen/horizontal_margin"
                    android:layout_marginTop="@dimen/vertical_margin"
                    android:paddingLeft="@dimen/horizontal_padding"
                    android:paddingRight="@dimen/horizontal_padding"
                    android:paddingTop="@dimen/top_padding"
                    android:text="@{movie.getReadableSynopsis()}"
                    android:textColor="@color/primary_text"
                    android:textSize="32sp"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/rv_reviews"
                    app:layout_constraintTop_toBottomOf="@+id/ratingBar"
                    tools:layout_constraintLeft_creator="1"
                    tools:layout_constraintRight_creator="1"
                    tools:text="@string/synopsis_placeholder" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_trailers"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="@dimen/horizontal_margin"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="@dimen/horizontal_margin"
                    android:layout_marginStart="@dimen/horizontal_margin"
                    android:layout_marginTop="@dimen/vertical_margin"
                    android:clipToPadding="true"
                    android:paddingLeft="@dimen/horizontal_padding"
                    android:paddingRight="@dimen/horizontal_padding"
                    android:paddingTop="@dimen/top_padding"
                    app:layout_constraintBottom_toTopOf="@+id/tv_synopsis"
                    app:layout_constraintLeft_toRightOf="@+id/tv_synopsis"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_reviews"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="@dimen/horizontal_margin"
                    android:layout_marginRight="@dimen/horizontal_margin"
                    android:layout_marginStart="@dimen/horizontal_margin"
                    android:layout_marginTop="8dp"
                    android:clipToPadding="true"
                    android:paddingLeft="@dimen/horizontal_padding"
                    android:paddingRight="@dimen/horizontal_padding"
                    android:paddingTop="@dimen/top_padding"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rv_trailers" />
            </android.support.constraint.ConstraintLayout>
        </ScrollView>
    </FrameLayout>
</layout>